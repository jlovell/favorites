.navbar.navbar-inverse
  .container-fluid
    .navbar-header
      %a.navbar-brand{:href => "javascript:window.history.go(-1);"}
        %i.material-icons
          = yield(:navicon).presence || "keyboard_arrow_left"
      %a.navbar-brand{:href => root_path } Favorites!
      - if params[:action] == "index"
        %form.navbar-form.navbar-brand.navbar-right.pull-right{ style: "margin: 0;"}
          .form-group
            %input#search-filter.form-control.col-md-8{ placeholder: "Search or Add", type: "text" }
      - else
        %button.navbar-toggle{"data-target" => ".navbar-inverse-collapse", "data-toggle" => "collapse", :type => "button"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
    .navbar-collapse.collapse.navbar-inverse-collapse
      - if current_user
        %p.navbar-text.navbar-right
          Logged in as #{current_user.name}
        %ul.nav.navbar-nav.navbar-right
          %li
            = link_to "Log out", sign_out_path
      - else
        %ul.nav.navbar-nav.navbar-right
          %li
            = link_to "Log in", new_session_path
:css
  .navbar .navbar-text {
    margin-top: 15px;
    margin-bottom: 15px;
  }
  .navbar-form {
    border-top: none;
    border-bottom: none;
    -webkit-box-shadow: none;
    box-shadow: none;
  }
